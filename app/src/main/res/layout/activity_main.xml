<?xml version="1.0" encoding="utf-8"?>
<com.example.lovestou.view.SlideSideMenuTransitionLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <include layout="@layout/drawablelayout"/>

    </LinearLayout>

    <com.example.lovestou.view.SlideSideMenuContentCardView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v4.view.ViewPager
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="56dp" />

        <eu.long1.spacetablayout.SpaceTabLayout
            android:id="@+id/spaceTabLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:button_color="@color/orgTheme"
            app:layout_behavior="eu.long1.spacetablayout.SpaceTabLayoutBehavior"
            app:icon_one="@mipmap/home"
            app:icon_two="@mipmap/news"
            app:icon_three="@mipmap/nav"
            app:number_of_tabs="four"
            app:starting_position="one"
            app:tab_color="@color/blueTheme" />
    </com.example.lovestou.view.SlideSideMenuContentCardView>

</com.example.lovestou.view.SlideSideMenuTransitionLayout>